def write_array(array, file_name):
    with open(file_name, 'w', encoding='UTF-8') as file:
        file.write('\n'.join(array))
array = ['The first sentence', 'the second sentence', 'etc...']
write_array(array, 'example_2')

with open('example_2', 'r', encoding='UTF-8') as file:
    print(file.read())
